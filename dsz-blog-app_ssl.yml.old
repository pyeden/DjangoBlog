apiVersion: v1
kind: ServiceAccount
metadata:
  name: my-blog
---
apiVersion: v1
kind: Service
metadata:
  name: my-blog
  labels:
    app: my-blog
    service: my-blog
spec:
  ports:
  - name: http
    port: 8000
    targetPort: 8000
  selector:
    app: my-blog



---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: my-blog
spec:
  replicas: 1
  selector:
    matchLabels:
      app: my-blog
      version: v1
  template:
    metadata:
      labels:
        app: my-blog
        version: v1
    spec:
      serviceAccountName: my-blog
      containers:
      - image: easzlab.io.local:5000/dsz-blog-app:v1
        imagePullPolicy: IfNotPresent
        name: my-blog
        ports:
        - containerPort: 8000


---
apiVersion: networking.istio.io/v1alpha3
kind: Gateway
metadata:
  name: my-blog-gateway
spec:
  selector:
    istio: ingressgateway # use istio default ingress gateway
  servers:
  - port:
      number: 443
      name: https
      protocol: HTTPS
    tls:
      mode: PASSTHROUGH
      credentialName: blog-credential # must be the same as secret
    hosts:
    - pyeden.com

---

apiVersion: networking.istio.io/v1alpha3
kind: VirtualService
metadata:
  name: my-blog
spec:
  hosts:
  - "pyeden.com"
  gateways:
  - my-blog-gateway
  tls:
  - match:
    - sniHosts: ["pyeden.com"]
    route:
    - destination:
        port:
          number: 8000
        host: my-blog


